



<div class="col-sm-@column">
    <div class="card">
        <div class="card-body">

            <div class="box-left">
                <h1>@CardInDeck.NamedValue</h1>
            </div>

            <div class="box-center">
                <h4>@CardInDeck.Suits</h4>
            </div>

            <div class="box-right">
                <h1>@CardInDeck.NamedValue</h1>

            </div>

        </div>

    </div>
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="checked">
        <label class="form-check-label" for="Label">Replace</label>
    </div>
</div>

@code {
    [Parameter]
    public Card CardInDeck { get; set; }
    [Parameter]
    public int column{ get; set; }
}